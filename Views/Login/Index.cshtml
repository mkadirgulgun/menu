<style>
    form {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .button-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn-primary, .btn-register {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
        text-decoration: none;
        text-align: center;
        display: inline-block;
    }

        .btn-primary:hover, .btn-register:hover {
            background-color: #0056b3;
        }

    .btn-forgotpassword {
        display: block;
        text-align: center;
        margin-top: 10px;
        font-size: 12px; /* Küçük font boyutu */
    }

        .btn-forgotpassword a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }

            .btn-forgotpassword a:hover {
                text-decoration: underline;
            }



</style>
<form method="post">
    <div class="mb-3">
        <label for="UserName" class="form-label">Kullanıcı Adı</label>
        <input required type="text" class="form-control" name="UserName">
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Şifre</label>
        <input required type="password" class="form-control" name="Password">
    </div>
    <div class="button-container">
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
        <a href="Login/SignUp" class="btn-register">Kayıt Ol</a>
    </div>
    <div class="btn-forgotpassword">
        <a href="Login/ForgotPassword">Şifremi Unuttum</a>
    </div>
    @ViewData["Msg"]
</form>
